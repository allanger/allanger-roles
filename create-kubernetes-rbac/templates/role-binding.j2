apiVersion: rbac.authorization.k8s.io/v1
kind: {{ binding_type}}
metadata:
  name: {{ username }}
  namespace: {{ k8s_namespace | default("default") }}
subjects:
- kind: User
  name: {{ username }}
  apiGroup: rbac.authorization.k8s.io
roleRef:
  kind: {{ role_type }}
  name: {{ role }}
  apiGroup: rbac.authorization.k8s.io